{
  "name": "swagger-chunk",
  "version": "1.4.0",
  "description": "Build and maintain large swagger API documentation files from small manageable chunks. Output yaml or json format. Instal skeleton swagger-chunk & scripts via command line --init",
  "keywords": [
    "swagger",
    "swagger-codegen",
    "swagger chunks",
    "yaml",
    "yml",
    "merge yaml",
    "merge yml",
    "DDD",
    "Documentation-Driven Development"
  ],
  "main": "index.js",
  "bin": {
    "swagger-chunk": "./bin/swagger-chunk.js"
  },
  "scripts": {
    "install:githooks": "cp ./githooks/* .git/hooks",
    "build:es5": "./node_modules/.bin/babel es6 -d es5",
    "lint": "eslint *.js es6/",
    "test": "npm run test:build-run && NODE_ENV=TEST jest",
    "test:build-run": "npm run build:es5 && cd ./example && npm run build:by-programaticaly",
    "prepublish": "npm run test && npm run build:es5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdcrecur/swagger-chunk.git"
  },
  "author": "John Carmichael",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jdcrecur/swagger-chunk/issues"
  },
  "homepage": "https://github.com/jdcrecur/swagger-chunk#readme",
  "dependencies": {
    "commander": "^2.15.1",
    "fs-extra": "^5.0.0",
    "inquirer": "^5.2.0",
    "js-yaml": "^3.11.0",
    "json-refs": "^3.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.19.1",
    "jest": "^22.4.3"
  }
}
